FROM openjdk:11

# install needed packages
RUN apt-get update && apt-get install -y ant  && apt-get install -y zip && apt-get install -y xmlstarlet
# apt install openjdk-11-jre-headless
RUN mkdir -p izpack

COPY /ant-lib /usr/share/ant/lib/
COPY . izpack
WORKDIR /izpack
